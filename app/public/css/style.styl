@import 'nib'

regular-btn-color = #44bbff
agent-btn-color = #33ccee

ohack-modal-layout(w, h)
  width w
  height h
  background-color #fafafa
  padding 20px 80px 20px 80px
  position fixed
  top 0
  bottom 0
  right 0
  left 0
  border-radius 10px
  border 2px solid #3478ab
  box-shadow 10px 10px 5px #444444;
  margin auto
  opacity 0.9

ohack-title-label()
  position absolute
  top 5px
  width auto
  height 12px
  right 5px
  font-size 10px
  color black
  text-align right

ohack-button()
  width 60px
  height 30px
  font-size 14px
  background-color regular-btn-color
  border-radius 3px
  border 0px solid white
  cursor pointer

html {
  min-height 100%
  position relative
}
body {
  margin 0
  padding 0
  height 100%
  background-image url('')
  background-repeat no-repeat
  background-size 800px
  font-family 'Raleway' sans-serif
}
#facility-container {
  color white
  height 100%
  width 100%
}
.status-bar {
  height 40px
  width 100%
  margin 0px
  padding 5px 5px
  padding-left 20px
  background-color #359
  position fixed
}
#logout-home {
    position absolute
    right 50px
}
button#btn-logout{
  width 128px
  height 36px
}
#role-status {
  float left
  position absolute
  width 600px
  height 100%
  display inline-block
}
#role-status p{
  float left
  font-size 18px
}
#role-status p.login-label{
  padding-left 30px
  font-size 12px
  padding-top 10px
}
#role-status p.login-as{
  padding-left 5px
  font-size 12px
  padding-top 10px
}
main.body-home {
  background-color #fbfbfb
  position fixed
  top 50px
  text-align center
  width 100%
  height 100%
}
#user-list-container {
  position fixed
  cursor pointer
  left 50px
  top 100px
  bottom 100px
  height auto
  width 250px
  min-height 400px
  background-color #e8e8e8
  border 2px solid #3478ab
}
.user-list-layout {
  width 100%
  height 100%
  margin-bottom -72px
}
.user-list-slot {
  color black
  font-size 18px
  text-align left
  margin 2px 5px 2px 5px
  padding-left 5px
  padding-right 5px
  height 30px
}
.list-controls {
  margin-top 22px
  height 48px
  width 100%
}
#add {
  width 50%
  height 100%
  float left
  border-radius 2px
  font-size 24
}
#del {
  width 50%
  height 100%
  float right
}
button.btn-list-controls {
  width 98%
  height 100%
  background-color #eef8ff
  border-radius 5px
  font-size 24px
}
#user-info {
  display none
  position fixed
  top 100px
  left 350px
  bottom 100px
  min-width 300px
  min-height 380px
  width 300px
  height 380px
  padding 20px 80px 20px 80px
  text-align left
  color black
}
.footer-home {
  height 20px
  width 100%
  background-color #172747
  position fixed
  bottom 0px
  padding 2px
}
.footer-home a{
  color lightblue
  text-decoration none
}
#login-container {
  ohack-modal-layout 400px 480px
  display none
}
.input-textbox {
  font-size 24px
  width 95%
  height 50px
  margin 5px
  margin-bottom 20px
  padding 5px
  border-radius 5px
}
#btn-login {
  width 100px
  height 40px
  font-size 18px
  border-radius 5px
  padding 5px
  margin 5px
  margin-bottom 20px
  margin-right 30px
}
#account-form-container {
  ohack-layout()
  display none
}
#get-credentials {
  display none
}
#set-password {
  display none
}
.signup-form-modal {
  display none
}
#modal-alert {
  display none
}
#signup {
  display none
}
.highlight {
  font-weight bold
  background-color #c8c8c8
  color darkgrey
}
